        {
            "name": "Check artifact for JoltTransformJSON",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {\r",
                            "    pm.response.to.have.status(200);\r",
                            "});\r",
                            "pm.test(\"Check artifact for JoltTransformJSON\", function () {\r",
                            "    let expArtifact = \"nifi-standard-nar\";\r",
                            "    var jsonData = pm.response.json();\r",
                            "    var processors = jsonData.processGroupFlow.flow.processors;\r",
                            "    var result = false;\r",
                            "    for (var i = 0; i < processors.length; i++) {\r",
                            "        var pg = processors[i]\r",
                            "        if (pg.component.name == \"JoltTransformJSON\") {\r",
                            "            pm.expect(pg.component.bundle.artifact).to.equal(expArtifact);\r",
                            "        }\r",
                            "    }\r",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
